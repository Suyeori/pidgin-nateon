# Contributor: HazE <hansun.lee at gmail.com>
# Contributor: kaisyu <>
# Contributor: Jazzbug <yeonstyle at gmail.com>

pkgname=pidgin-nateon-git
pkgver=0.0.0
pkgrel=1
pkgdesc="A pidgin plugin that provides NateOn protocol support"
arch=('i686' 'x86_64')
url="https://github.com/trustin/pidgin-nateon"
group=('nateon')
license=('GPL')
depends=('pidgin')
makedepends=("git" "intltool" "libtool" "automake" "autoconf")
source=('git+https://github.com/trustin/pidgin-nateon.git')
md5sums=('SKIP')

_gitroot="git+https://github.com/trustin/pidgin-nateon.git"
_gitname="pidgin-nateon"

pkgver() {
  cd $startdir/src/$_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $startdir/src/$_gitname
  ./autogen.sh return 1
  ./configure --prefix=/usr
  make
}

package() {
  cd $startdir/src/$_gitname
  make DESTDIR=$startdir/pkg/$pkgname install
}

